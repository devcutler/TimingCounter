<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>devcutler.TimingCounter</PackageId>
    <Version>1.0.1</Version>
    <Authors>devcutler</Authors>
    <Description>A simple bespoke timing library for getting frame timings.</Description>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseExpression>Unlicense</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/devcutler/TimingCounter</RepositoryUrl>
    <PackageTags>timing fps counter tick</PackageTags>
  </PropertyGroup>

  <ItemGroup>
    <None Include="README.md" pack="true" PackagePath="." />
  </ItemGroup>

  <PropertyGroup>
    <TargetFramework>net8.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <PropertyGroup>
    <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    <OutputPath>build/</OutputPath>
  </PropertyGroup>

</Project>
